{
  "name": "trading-framework",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:watch": "jest --config jest.integration.config.js --watch",
    "test:all": "npm run test && npm run test:integration",
    "prepare": "husky install",
    "setup": "scripts/setup-dev.sh",
    "docker:test": "scripts/test-docker.sh",
    "security:scan": "gitleaks detect --config .gitleaks.toml || echo 'Install gitleaks for secret scanning'",
    "precommit": "npm run lint && npm run test:ci && npm run security:scan",
    "validate": "npm run lint && npm run test:ci && npm run build",
    "validate:integration": "npm run lint && npm run test:all && npm run build",
    "lighthouse": "node scripts/lighthouse-audit.js",
    "lighthouse:ci": "lhci autorun",
    "audit:performance": "npm run build && npm run start & npx wait-on http://localhost:3000 && npm run lighthouse",
    "audit:accessibility": "npm run build && npm run start & npx wait-on http://localhost:3000 && npx axe http://localhost:3000"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tanstack/react-query": "^5.79.0",
    "@tanstack/react-query-devtools": "^5.79.0",
    "@types/node-fetch": "^2.6.12",
    "framer-motion": "^12.15.0",
    "lucide-react": "^0.511.0",
    "next": "15.1.0",
    "node-fetch": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.56.4",
    "recharts": "^2.15.3"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.8.3",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@lhci/cli": "^0.12.0",
    "@tailwindcss/postcss": "^4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.21",
    "chrome-launcher": "^1.1.0",
    "dotenv": "^16.4.7",
    "eslint": "^9",
    "eslint-config-next": "15.1.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lighthouse": "^11.4.0",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.8",
    "ts-jest": "^29.1.2",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  }
}
